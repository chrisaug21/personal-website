            --background-color: #fff;
            --color: #333;
        }
        
        /* Pico CSS replacements */
        p {
            margin-bottom: 1.25rem;
            font-size: 1rem;
        }
        
        ul, ol {
            padding-left: 2rem;
            margin-bottom: 1.5rem;
        }
        
        li {
            margin-bottom: 0.5rem;
            list-style-position: outside;
        }
        
        input, button, select, textarea {
            font-family: inherit;
            font-size: inherit;
        }
        
        h1, h2, h3, h4, h5, h6 {
            margin-top: 0;
            margin-bottom: 1rem;
            font-weight: 700;
            line-height: 1.2;
        }

        /* Add a class for the journey content instead */
        .journey-content {
            font-size: 14px;
        }

        .journey-container {
            max-width: 1200px;
            width: 100%;
            margin: 0 auto;
            padding-top: 0.5rem;
            padding-right: 0.5rem;
            padding-bottom: 0.5rem;
            padding-left: 0.5rem;
            position: relative;
            display: flex;
            flex-direction: column;
            gap: 0;
            box-sizing: border-box;
        }

        .journey-map {
            position: relative;
            width: 100%;
            height: 280px;
            overflow: visible;
            margin: 0 auto;
            padding: 0 50px;
            margin-bottom: -20px; /* Reduced to move timeline up */
        }

        .timeline-svg {
            width: 100%;
            height: 100%;
            overflow: visible;
        }

        .path {
            stroke: #0077cc;
            stroke-width: 5;
            fill: none;
        }

        .node-group {
            cursor: pointer;
            transition: transform 0.3s ease, filter 0.3s ease; /* Added filter for glow effect */
            transform: translateY(0);
        }

        .node-group:hover {
            /* Slight scale effect */
            transform: translateY(-20px) scale(1.05);
            filter: drop-shadow(0 0 8px rgba(0, 119, 204, 0.5)); /* Added glow effect */
        }

        .company-node {
            fill: white;
            stroke: #0077cc;
            stroke-width: 5;
        }

        .company-logo {
            pointer-events: none;
        }

        /* Hover label styling */
        .company-hover-label {
            transition: opacity 0.3s ease;
            pointer-events: none;
            text-shadow: 1px 1px 3px rgba(255, 255, 255, 0.8), -1px -1px 3px rgba(255, 255, 255, 0.8);
        }

        /* Year label styling */
        .year-label {
            font-size: 14px;
            fill: #666;
            text-anchor: middle;
            pointer-events: none;
        }

        /* Education node styling */
        .education-info {
            background-color: #f5f9ff;
            padding: 1.25rem;
            border-radius: 6px;
            margin-bottom: 1rem;
            border-left: 3px solid #0077cc;
        }

        .education-info h4 {
            color: #333;
            margin-bottom: 0.5rem;
        }

        .education-info .period {
            color: #666;
            font-style: italic;
            margin-bottom: 0.75rem;
        }

