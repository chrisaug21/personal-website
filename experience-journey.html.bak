                website: "https://www.fedex.com/en-us/office.html",
                logo: "./images/fedex_kinkos_logo.png",
                description: "A retail chain offering printing, copying, and business services to individuals and businesses. Part of FedEx Corporation providing document solutions and office services.",
                startYear: "2002",
                products: [],
                roles: [
                    {
                        title: "Project Manager",
                        period: "September 2002 - December 2005",
                        description: "Managed complex printing and publishing projects for corporate clients at FedEx Kinko's corporate document solutions center. Served as primary point of contact for key accounts, overseeing production schedules, quality control, and custom deliveries.",
                        achievements: [
                            "Managed key client projects with consistent on-time delivery",
                            "Led operational initiatives to improve production efficiency",
                            "Drove service delivery improvements to increase repeat business",
                            "Implemented client onboarding process to reduce errors and improve satisfaction scores"
                        ]
                    }
                ],
                x: 50,
                y: 150
            }
        ];

        // Initialize SVG
        const svg = document.querySelector('.timeline-svg');
        
        // Create path
        const path = document.createElementNS("http://www.w3.org/2000/svg", "path");
        path.setAttribute("class", "path");
        
        let pathData = `M ${careerData[0].x} ${careerData[0].y}`;
        for (let i = 1; i < careerData.length; i++) {
            const curr = careerData[i];
            pathData += ` L ${curr.x} ${curr.y}`;
        }
        path.setAttribute("d", pathData);
        svg.appendChild(path);

        // Variable to track currently selected node
        let selectedNode = null;
        
        // References to DOM elements
        const infoPanel = document.querySelector('.info-panel');
        const companyInfo = document.querySelector('.company-info');
        const infoPanelContainer = document.querySelector('.info-panel-container');
        const placeholderText = document.querySelector('.placeholder-text');
        const introText = document.querySelector('.intro-text');

        // Create company nodes with logos and year labels
        careerData.forEach((company, index) => {
            const group = document.createElementNS("http://www.w3.org/2000/svg", "g");
            group.setAttribute("transform", `translate(${company.x},${company.y})`);
            
            // Create interactive node group
            const nodeGroup = document.createElementNS("http://www.w3.org/2000/svg", "g");
            nodeGroup.setAttribute("class", "node-group");
            nodeGroup.setAttribute("data-company", company.company);
            
            // Create big circle first
            const circle = document.createElementNS("http://www.w3.org/2000/svg", "circle");
            circle.setAttribute("class", "company-node");
            circle.setAttribute("r", "65"); // BIG circle
            
            // Create logo inside circle
            const image = document.createElementNS("http://www.w3.org/2000/svg", "image");
            image.setAttribute("class", "company-logo");
            image.setAttribute("href", company.logo);
            image.setAttribute("x", -45); // Adjusted for smaller logo
            image.setAttribute("y", -45); // Adjusted for smaller logo
            image.setAttribute("width", "90"); // Slightly smaller to prevent cutting off circle
            image.setAttribute("height", "90"); // Slightly smaller to prevent cutting off circle
            
            // Add error handling for logo loading
            image.addEventListener('error', () => {
                console.log(`Failed to load logo for ${company.company}`);
                const text = document.createElementNS("http://www.w3.org/2000/svg", "text");
                text.setAttribute("class", "company-logo-text");
                text.setAttribute("text-anchor", "middle");
                text.setAttribute("dominant-baseline", "middle");
                text.setAttribute("font-size", "28"); // Larger font
                text.textContent = company.company.charAt(0);
                nodeGroup.appendChild(text);
                image.remove();
            });
            
            // Create text label for hover
            const hoverLabel = document.createElementNS("http://www.w3.org/2000/svg", "text");
            hoverLabel.setAttribute("class", "company-hover-label");
            hoverLabel.setAttribute("text-anchor", "middle");
            hoverLabel.setAttribute("y", "-80"); // Changed from 100 to -80 to position above the node
            hoverLabel.setAttribute("font-size", "26"); // Increased from 22 to 26
            hoverLabel.setAttribute("font-weight", "bold");
            hoverLabel.setAttribute("fill", "#0077cc");
            hoverLabel.setAttribute("opacity", "0");
            hoverLabel.textContent = company.company;
            
            // Add year label below the node
            const yearLabel = document.createElementNS("http://www.w3.org/2000/svg", "text");
            yearLabel.setAttribute("class", "year-label");
            yearLabel.setAttribute("text-anchor", "middle");
            yearLabel.setAttribute("y", "100"); // Position below the node
            yearLabel.setAttribute("font-size", "16");
            yearLabel.setAttribute("fill", "#666");
            
            // Use start year for company nodes, graduation year for education
            if (company.education) {
                yearLabel.textContent = company.education.year;
            } else if (company.startYear) {
                yearLabel.textContent = company.startYear;
            }
            
            // Add in correct order: first circle (background), then image (foreground), then hover label
            nodeGroup.appendChild(circle);
            nodeGroup.appendChild(image);
            nodeGroup.appendChild(hoverLabel);
            
            // UPDATED: Mouse events for nodes with new hover behavior
            nodeGroup.addEventListener('mouseenter', () => {
                // Only show the hover label if this node is not the selected node
                if (selectedNode !== nodeGroup) {
                    hoverLabel.setAttribute("opacity", "1");
                }
            });
            
            nodeGroup.addEventListener('mouseleave', () => {
                // Hide the hover label
                hoverLabel.setAttribute("opacity", "0");
            });
            
            // Updated click event to work with education nodes too
            nodeGroup.addEventListener('click', (event) => {
                event.stopPropagation();
                
                // If this node is already selected, do nothing
                if (selectedNode === nodeGroup) {
                    return;
                }
                
                // Deselect previous node if any
                if (selectedNode) {
                    const prevLabel = selectedNode.querySelector('.company-hover-label');
                    if (prevLabel) {
                        prevLabel.setAttribute("opacity", "0");
                    }
                    selectedNode.classList.remove('selected');
                }
                
                // Select this node
                selectedNode = nodeGroup;
                nodeGroup.classList.add('selected');
                // Hide hover label when node is selected
                hoverLabel.setAttribute("opacity", "0");
                
                // Hide the intro text
                introText.style.display = 'none';
                
                // Show company info and update container
                showCompanyInfo(company);
                infoPanelContainer.classList.add('has-content');
            });
            
            // Add the interactive node group and year label to the position group
            group.appendChild(nodeGroup);
            group.appendChild(yearLabel);
            svg.appendChild(group);
        });

        // UPDATED: Show company info - modified to handle education nodes
        function showCompanyInfo(company) {
            const hasProductRoles = company.products && company.products.length > 0;
            const isEducation = company.education !== undefined;
            
            // Enhanced info panel structure
            let companyInfoHTML = `
                <div class="company-info-header">
                    <div class="company-logo-container">
                        <img src="${company.logo}" alt="${company.company} logo" onerror="this.src='https://via.placeholder.com/80?text=${company.company.charAt(0)}'; this.onerror=null;">
                    </div>
                    <div class="company-title">
                        <h3>${company.company}</h3>
                        <p><a href="${company.website}" target="_blank">${company.website.replace('https://', '')}</a></p>
                    </div>
                </div>
            `;
            
            // Company description section
            companyInfoHTML += `
                <div class="company-description">
                    <p>${company.description}</p>
                </div>
            `;
            
            if (isEducation) {
                // Education section
                companyInfoHTML += `
                    <div class="info-section">
                        <h4><i class="fas fa-graduation-cap"></i> Education</h4>
                        <div class="education-info">
                            <h4>${company.education.degree}, ${company.education.field}</h4>
                            <p class="period">Graduated: ${company.education.year}</p>
                            <p>${company.education.description}</p>
                        </div>
                    </div>
                `;
            } else {
                // Roles section (only for companies, not education)
                companyInfoHTML += `
                    <div class="info-section">
                        <h4><i class="fas fa-briefcase"></i> Roles & Responsibilities</h4>
                        <div class="roles-container${company.roles.length > 1 ? ' multiple-roles' : ''}">
                            ${company.roles.map(role => `
                                <div class="role">
                                    <h4>${role.title}</h4>
                                    <p class="period">${role.period}</p>
                                    <p>${role.description}</p>
                                    <ul>
                                        ${role.achievements.map(achievement => 
                                            `<li>${achievement}</li>`
                                        ).join('')}
                                    </ul>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                `;
                
                // Products section (only if company has products and is not education)
                if (hasProductRoles) {
                    companyInfoHTML += `
                        <div class="info-section">
                            <h4><i class="fas fa-cube"></i> Products Worked On</h4>
                            <div class="product-list">
                                ${company.products.map(product => `
                                    <div class="product-card">
                                        <h5>${product.name}</h5>
                                        <p>${product.description}</p>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    `;
                }
            }
            
            // Animate content transition
            infoPanel.style.opacity = "0";
            
            setTimeout(() => {
                companyInfo.innerHTML = companyInfoHTML;
                infoPanel.classList.add('visible');
                infoPanel.style.opacity = "1";
            }, 300);
        }

        // Hide info panel
        function hideInfoPanel() {
            infoPanel.classList.remove('visible');
        }
    </script>
</body>
</html>